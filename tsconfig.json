{
	"compilerOptions": {
		"outDir": "./dist/",
		"module": "commonjs",
		"target": "es2020",
		"noImplicitAny": true,
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"declaration": true
	},
	"exclude": [
		"node_modules"
	]
}
